<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".CardActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/idCardBurrito"
        android:layout_width="390dp"
        android:layout_height="200dp"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#0A490C">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/idBurrito"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="48dp"
                android:src="@drawable/burrito" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/idCardNum2"
        android:layout_width="390dp"
        android:layout_height="200dp"
        android:layout_below="@+id/idCardBurrito"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#F4E133">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/idNum2"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/num2" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/idCardGajos"
        android:layout_width="390dp"
        android:layout_height="200dp"
        android:layout_below="@+id/idCardNum2"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#E81212">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/idGajos"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/gajos" />

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>